<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_Login.Views.WelcomePage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Image Source="zeisslogo.jpg"
                HeightRequest="100"
                WidthRequest="100"
               AbsoluteLayout.LayoutBounds="0.5, 0.5, AutoSize, AutoSize"
               AbsoluteLayout.LayoutFlags="PositionProportional" />
         <ScrollView>      
        <Label Text="Welcome to ZEISS Connect Lite" FontSize="Medium" Padding="30" HorizontalTextAlignment="Center"/>
        </ScrollView>   
        <ScrollView>   
        <Label Text="Connect Lite connects to ZEISS microscopes and &#10; ZEISS surgical cloud to allow quick and seamless &#10;access to surgical images and videos" FontSize="Micro" Padding="20" HorizontalTextAlignment="Center"/>
        </ScrollView>   
        <ScrollView>   
        <Label Text="Currently supports ZEISS Extaro 300 " Padding="30" HorizontalTextAlignment="Center"/>
        </ScrollView>   
        <Button Text="Continue" Command="{Binding ContinueCommand}"  HorizontalOptions="Center"/>
        <ActivityIndicator IsRunning="False" />
    </StackLayout>
</ContentPage>