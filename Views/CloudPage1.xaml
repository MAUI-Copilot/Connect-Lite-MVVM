         <ListView ItemsSource="{Binding Patients}" ItemSelected="OnPatientSelected" Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Medium" />
                            <Label>
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0} | {1} | {2}">
                                        <Binding Path="Gender" />
                                        <Binding Path="Age" />
                                        <Binding Path="ID" />
                                    </MultiBinding>
                                </Label.Text>
                            </Label>
                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
