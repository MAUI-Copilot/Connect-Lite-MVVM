<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="User_Pass.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Image
                Source="C:/Users/pratik.kshirsagar/Desktop/Images/ZeissLogo.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Zeiss Logo" />
            
            <Label
                Text="Welcome to Zeiss Cloud"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
            <Label Text="Username" />
            <Entry Text="{Binding Username}" Placeholder="Enter your username" />
            <Label Text="Password" />
            <Entry Text="{Binding Password}" Placeholder="Enter your password" IsPassword="True" />
            <Button
                Text="Login"
                Command="{Binding LoginCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>